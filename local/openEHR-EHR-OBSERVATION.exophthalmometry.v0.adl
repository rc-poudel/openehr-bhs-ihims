definition
	OBSERVATION[at0000] matches {    -- Exophthalmometry
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					POINT_EVENT[at0002] occurrences matches {0..*} matches {    -- Any event
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0004] occurrences matches {0..1} matches {    -- Result
										value matches {
											C_DV_QUANTITY <
												property = <[openehr::122]>
												list = <
													["1"] = <
														units = <"mm">
													>
												>
											>
										}
									}
									ELEMENT[at0010] occurrences matches {0..1} matches {    -- Globe position in vertical axis
										value matches {
											DV_QUANTITY matches {*}
										}
									}
									ELEMENT[at0005] occurrences matches {0..1} matches {    -- Eye examined
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0006,    -- Right Eye
													at0007]    -- Left Eye
												}
											}
										}
									}
									ELEMENT[at0021] occurrences matches {0..1} matches {    -- Comment
										value matches {
											DV_TEXT matches {*}
										}
									}
									ELEMENT[at0022] occurrences matches {0..1} matches {    -- Interpretation
										value matches {
											DV_TEXT matches {*}
										}
									}
									ELEMENT[at0023] occurrences matches {0..1} matches {    -- No test result
										value matches {
											DV_BOOLEAN matches {*}
										}
									}
									ELEMENT[at0024] occurrences matches {0..1} matches {    -- Reason for no test result
										value matches {
											DV_TEXT matches {*}
										}
									}
								}
							}
						}
						state matches {
							ITEM_TREE[at0025] matches {    -- Item tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0012] occurrences matches {0..1} matches {    -- Provocative Maneuvers
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::at0013]    -- Valsalva Maneuver
												}
											}
										}
									}
									ELEMENT[at0026] occurrences matches {0..1} matches {    -- Confounding Factors
										value matches {
											DV_TEXT matches {*}
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0028,    -- Lid Swelling
													at0029,    -- Blepharospasm
													at0030,    -- Confusion
													at0031,    -- Excentric Fixation
													at0032,    -- Manually holding lid open
													at0033,    -- Uncooperative
													at0035,    -- Good cooperation
													at0036,    -- Lying in Bed
													at0037]    -- Lack of Fixation
												}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0008] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0009] occurrences matches {0..1} matches {    -- Horizontal Base Distance
						value matches {
							C_DV_QUANTITY <
								property = <[openehr::122]>
								list = <
									["1"] = <
										units = <"mm">
									>
								>
							>
						}
					}
					ELEMENT[at0014] occurrences matches {0..1} matches {    -- Measurement Device Type
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0015,    -- Hertel
									at0016,    -- Naugle
									at0017,    -- Luedde
									at0018,    -- Mourits
									at0019]    -- Computer Tomography
								}
							}
						}
					}
					allow_archetype CLUSTER[at0020] occurrences matches {0..*} matches {    -- Device Specification
						include
							archetype_id/value matches {/openEHR-EHR-CLUSTER\.device(-[a-zA-Z0-9_]+)*\.v1/}
					}
				}
			}
		}
	}

ontology
	terminologies_available = <"SNOMED-CT", ...>
	term_definitions = <
		["en"] = <
			items = <
				["at0000"] = <
					text = <"Exophthalmometry">
					description = <"Measurement of eye globe position relative to the orbital rim to assess protrusion or retraction of the eyeball.">
				>
				["at0001"] = <
					text = <"History">
					description = <"@ internal @">
				>
				["at0002"] = <
					text = <"Any event">
					description = <"@ internal @">
				>
				["at0003"] = <
					text = <"Tree">
					description = <"@ internal @">
				>
				["at0004"] = <
					text = <"Result">
					description = <"The measurement of globe position in the anterior-posterior axis, the main measure of exomphthalmometry.">
					comment = <"The landmarks compared along this axis may vary by method. For instance, in case of Hertel Exophthalmometry, it is the anterior-posterior distance between a line connecting the lateral orbital rims and the apex of the cornea. 
High values indicate Exophthalmus, low Values indicate Enophthalmus">
				>
				["at0005"] = <
					text = <"Eye examined">
					description = <"">
				>
				["at0006"] = <
					text = <"Right Eye">
					description = <"The right eye was examined.">
				>
				["at0007"] = <
					text = <"Left Eye">
					description = <"The left eye was examined.">
				>
				["at0008"] = <
					text = <"Item tree">
					description = <"@ internal @">
				>
				["at0009"] = <
					text = <"Horizontal Base Distance">
					description = <"The Horizontal distance between the reference points that are being compared to the globe position. In a Hertel exomphtalmometry, this refers to the distance between the lateral orbital rims.">
				>
				["at0010"] = <
					text = <"Globe position in vertical axis">
					description = <"A measure of the globe position in the vertical position.">
					comment = <"The landmarks compared along this axis may vary by method, and it is not measured by all Exomphthalmometry devices. The most commonly used Exophthalmometer (Hertel) does not produce this value, but the Naugle Exophthalmometer does. Abnormal Values reflect hyper-ophthalmus or hypo-ophthalmus. ">
				>
				["at0012"] = <
					text = <"Provocative Maneuvers">
					description = <"">
				>
				["at0013"] = <
					text = <"Valsalva Maneuver">
					description = <"A maneuver by which exhalation is attempted against closed airways.">
				>
				["at0014"] = <
					text = <"Measurement Device Type">
					description = <"">
				>
				["at0015"] = <
					text = <"Hertel">
					description = <"A measurement device positioned against both lateral orbital rims to measure the anterioposterior distance to the corneal apexes.">
				>
				["at0016"] = <
					text = <"Naugle">
					description = <"A measurement device positioned against the superior and inferior orbital rims to measure both the anterioposterior distance to the corneal apices and the vertial position of the globes.">
				>
				["at0017"] = <
					text = <"Luedde">
					description = <"A measurement device positioned against the orbital lateral rim of one orbit to measure the anterioposterior position of the globe.">
				>
				["at0018"] = <
					text = <"Mourits">
					description = <"A parallax-free exophthalmometry device, positioned similarly to the Hertel exophthalmometer.">
				>
				["at0019"] = <
					text = <"Computer Tomography">
					description = <"An imaging-based method to measure Globe position.">
				>
				["at0020"] = <
					text = <"Device Specification">
